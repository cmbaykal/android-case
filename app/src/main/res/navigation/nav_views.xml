<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_views"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.mrbaikal.nesineandroidcase.ui.views.list.ListFragment"
        android:label="@string/screen_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/listToDetail"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.mrbaikal.nesineandroidcase.ui.views.detail.DetailFragment"
        android:label="@string/screen_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>